<%- include('layout/header') -%>
<div class="container">
    <h1><%= title %></h1>
    <center>
    <h1>Welcome to the Add Edit User page!</h1>
    


<form class="p-4 shadow-lg rounded bg-light" style="width: 400px; margin-top: 20px;" method="POST" action="/update/<%= user._id %>" enctype="multipart/form-data">
  <h3 class="mb-4 text-primary text-center">Contact Form</h3>
  
  
  <div class="mb-3">
    <label for="name" class="form-label fw-bold">Name</label>
    <input type="text" class="form-control" id="name" name="username" placeholder="Enter your full name" value="<%= user.username %>">
  </div>
  
  <div class="mb-3">
    <label for="email" class="form-label fw-bold">Email address</label>
    <input type="email" class="form-control" id="email" name="email" placeholder="example@email.com" value="<%= user.email %>">
    <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
  </div>
  
  <div class="mb-3">
    <label for="phone" class="form-label fw-bold">Phone</label>
    <input type="tel" class="form-control" id="phone" name="phone" placeholder="Enter your phone number" value="<%= user.phone %>">
  </div>
  
  <button type="submit" class="btn btn-primary w-100">Update User</button>
</form>

    </center>

</div>
<%- include('layout/footer') -%>